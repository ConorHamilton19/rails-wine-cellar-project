<%= form_for(@wine) do |f| %>
<% if @wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wine.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @wine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>


<%= f.label :name %>
<%= f.text_field :name %> <br>
<%= f.label :year %>
<%= f.text_field :year %> <br>
<%= f.label :price %>
<%= f.text_field :price %><br>


<% if @wine.type_id %>
<%= f.hidden_field :type_id %>
<% else %>
<%= f.label :type_name %>
<%= f.text_field :type_name, list: "type_autocomplete" %>
 <datalist id="type_autocomplete">
   <% Type.all.each do |type| %>
     <option value="<%= type.name %>">
   <% end %>
 </datalist>
<% end %><br> <br>

<%= f.submit %>
<% end %>
